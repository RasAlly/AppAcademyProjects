<form action="<%=cats_url %>" method="POST">

  <label for="name">Name</label>
  <input type="text" id="name" name="cat[name]" value="<%= @kitty.name %>">

  <br>

  <label>Birth_date:
  <input type="date" name="cat[birth_date]" value="<%= @kitty.birth_date %>">
  </label>

  <br>

<label>Color
<select name="cat[color]">
    <option disabled selected>-- Select Color --</option>
    <option value="white">White</option>
    <option value="black">Black</option>
    <option value="brown">Brown</option>
    <option value="taby">Taby</option>
    <option value="grey">Grey</option>
    <option value="orange">Orange</option>
</select>
</label>

  <br>

<label>Sex
    <br>
    <input type="radio" id="male" name="cat[sex]" value="M">
    <label for="male">M</label><br> 
    <input type="radio" id="female" name="cat[sex]" value="F"> 
    <label for="female">F</label><br>
</label>

<label for="description">Description:
  <textarea name="cat[description]"></textarea>
</label>
<br>
  <input type="submit" value="Create Cat">


</form>